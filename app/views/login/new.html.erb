<% content_for :page_title do %>
  <%= t('titles.login.new') %>
<% end %>

<%= form_tag login_path do %>
  <p>
    <%= label_tag :credential, t('labels.login.credential') %>
    <%= text_field_tag :credential %>
  </p>

  <p>
    <%= label_tag :password, t('labels.login.password') %>
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= submit_tag t('helpers.submit.login'), class: 'button' %>
  </p>
<% end %>
